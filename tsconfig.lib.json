{
  "include": [
    "lib",
  ],
  "compilerOptions": {
    "outDir": "dist/lib",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "jsdom",
      "node",
    ],
    "paths": {
      "@/*": [
        "./playground/*"
      ],
      "@root/*": [
        "./*"
      ],
      "@assets/*": [
        "./playground/assets/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "lib/**/*.js",
    "lib/**/*.spec.ts",
  ]
}